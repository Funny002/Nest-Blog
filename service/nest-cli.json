{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "mysql": {
      "root": "mysql",
      "type": "library",
      "entryFile": "index",
      "sourceRoot": "mysql",
      "compilerOptions": {
        "tsConfigPath": "mysql/tsconfig.lib.json"
      }
    },
    "config": {
      "root": "config",
      "type": "library",
      "entryFile": "index",
      "sourceRoot": "config",
      "compilerOptions": {
        "tsConfigPath": "config/tsconfig.lib.json"
      }
    },
    "libs": {
      "root": "libs",
      "type": "library",
      "entryFile": "index",
      "sourceRoot": "libs",
      "compilerOptions": {
        "tsConfigPath": "libs/tsconfig.lib.json"
      }
    }
  }
}
