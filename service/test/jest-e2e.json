{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".test.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@mysql": "<rootDir>/mysql",
    "@utils": "<rootDir>/utils",
    "@config": "<rootDir>/config",
    "@middleware": "<rootDir>/middleware",
    "@interfaces": "<rootDir>/interfaces",
    "@libs/(.*)": "<rootDir>/libs/$1",
    "@mysql/(.*)": "<rootDir>/mysql/$1",
    "@utils/(.*)": "<rootDir>/utils/src/$1"
  }
}
