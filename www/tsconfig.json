{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias */
    "baseUrl": "./",
    "paths": {
      "@api": ["src/api"],
      "@store": ["src/store"],
      "@utils": ["src/utils"],
      "@views": ["src/views"],
      "@plugin": ["src/plugin"],
      "@module": ["src/components"],
      "@home": ["src/packages/home"],
      "@admin": ["src/packages/admin"],
      /* Alias/$ */
      "@api/*": ["src/api/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@views/*": ["src/views/*"],
      "@plugin/*": ["src/plugin/*"],
      "@module/*": ["src/components/*"],
      "@home/*": ["src/packages/home/*"],
      "@admin/*": ["src/packages/admin/*"]
    }
  },
  "include": ["src/**/*.{ts,vue}"],
  "references": [{"path": "./tsconfig.node.json"}]
}
